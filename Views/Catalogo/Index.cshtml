@model List<grupo_rojo_repository.Models.Producto>
@{
ViewData["Title"] = "Catalogo";
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row">
        @foreach (var producto in Model)
        {
            <div class="col-sm-4">
                <div class="card mb-3">
                    <img class="card-img-top" src="@producto.ImageURL" alt="Imagen del Producto">
                    <div class="card-body">
                        <h5 class="card-title">@producto.Articulo</h5>
                        <p>Precio: @producto.Precio</p>
                        <a class="btn btn-primary" asp-action="Add" asp-route-id="@producto.Id">Agregar al Carrito</a>
                        <a class="btn btn-primary" asp-action="VerProducto" asp-route-id="@producto.Id">Ver Producto</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

